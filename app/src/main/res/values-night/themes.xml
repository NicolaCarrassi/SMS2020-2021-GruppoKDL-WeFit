<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Bottom navigation style -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- Back icon style -->
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>

    </style>

    <!-- Bottom navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimaryDark">@color/snow_storm_light</item>
        <item name="colorOnPrimary">@color/snow_storm_dark</item>
    </style>

    <!-- Toolbar -->
    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="iconTint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Back icon -->
    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <!-- EditText -->
    <style name="EditTextCustom" parent="Theme.Design.Light">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BackgroundCustom" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/doodle1080p</item>
        <item name="android:backgroundTint">@color/black_custom</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>

    <style name="BackIconCustom" parent="Theme.AppCompat.Light">
        <item name="android:tint">@color/white</item>
        <item name="android:tintMode">multiply</item>
    </style>

    <style name="ButtonCustom" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/frost_blue</item>

    </style>
</resources>