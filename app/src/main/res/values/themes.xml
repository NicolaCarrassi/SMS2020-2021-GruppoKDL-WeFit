<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/frost_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Bottom navigation style -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- Back icon style -->
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <!-- Bottom navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/snow_storm_light</item>
        <item name="colorOnPrimary">@color/snow_storm_dark</item>
    </style>

    <!-- Toolbar -->
    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="iconTint">@color/blue</item>
        <item name="colorControlNormal">@color/blue</item>
    </style>

    <!-- Back icon -->
    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/blue</item>
    </style>

    <!-- Navigation bar divider -->
    <style name="Theme.WeFit.NavigationBar" >
        <item name="android:listDivider">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:dividerHeight">3dp</item>
    </style>


    <!-- LISTA FONT -->
    <!-- Custom h2 -->
    <style name="custom_h2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_custom_h2</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Card Title -->
    <style name="card_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_card_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!-- Card Text -->
    <style name="card_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_card_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>