<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Bottom navigation style -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- Back icon style -->
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <!-- Bottom sheet style -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- Bottom sheet style -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:backgroundTint">@android:color/background_dark</item>
        <item name="android:background">@drawable/bottom_sheet_rounded</item>
    </style>

    <!-- Bottom navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimaryDark">@color/snow_storm_light</item>
        <item name="colorOnPrimary">@color/snow_storm_dark</item>
    </style>

    <!-- Toolbar -->
    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="iconTint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Back icon -->
    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <!-- LISTA FONT -->
    <!-- Custom h1 -->
    <style name="custom_h1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_custom_h1</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>
    <!-- Custom h2 -->
    <style name="custom_h2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_custom_h2</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Custom p -->
    <style name="custom_p">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_custom_p</item>
    </style>
    <!-- Card Title -->
    <style name="card_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_card_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!-- Card Text -->
    <style name="card_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_card_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- EditText -->
    <style name="EditTextCustom" parent="Theme.Design.Light">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Background custom -->
    <style name="BackgroundCustom" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/doodle1080p</item>
        <item name="android:backgroundTint">@color/black_custom</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>

    <!-- Icon custom -->
    <style name="BackIconCustom" parent="Theme.AppCompat.Light">
        <item name="android:tint">@color/white</item>
        <item name="android:tintMode">multiply</item>
    </style>

    <!-- Material Button custom-->
    <style name="MaterialButtonCustom">
        <item name="cornerRadius">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Button custom-->
    <style name="ButtonCustom" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_blue_rounded_corners</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Spinner custom -->
    <style name="SpinnerCustom" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_rounded_corners</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Icon Add Fragment BG -->
    <style name="IconBgCustom" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="cardBackgroundColor">@color/polar_light</item>
        <item name="cardCornerRadius">23dp</item>
    </style>

    <!-- Icon Add Fragment -->
    <style name="IconAddCustom">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="tint">@color/light_grey</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


</resources>