<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.client.ClientAddWeightFragment"
    android:orientation="vertical"
    android:layout_marginVertical="35dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_weight"
        style="@style/custom_h2"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal" >

        <Button android:id="@+id/buttonDecrease"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            style="@style/ButtonCustom"
            android:text="-" />

        <EditText
            android:id="@+id/weightValue"
            android:inputType="numberDecimal"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/buttonDecrease"
            android:layout_toRightOf="@+id/buttonDecrease"
            android:gravity="center"
            style="@style/custom_p"
            android:text="70.0" />

        <Button android:id="@+id/buttonIncrease"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/weightValue"
            style="@style/ButtonCustom"

            android:text="+" />
    </RelativeLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonCustom"

        android:text="Invia"/>

</LinearLayout>