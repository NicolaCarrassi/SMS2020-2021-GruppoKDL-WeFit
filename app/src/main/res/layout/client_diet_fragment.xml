<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.client.ClientDietFragment"
    style="@style/BackgroundCustom">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        android:background="@color/transparent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/food_diary_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food_diary"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/diet_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diet_caps"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/shopping_list_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shopping_list" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/diet_fragment_anchor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>