<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.client.ClientAddMealFragment"
    android:orientation="vertical"
    android:layout_marginVertical="35dp">

    <LinearLayout
        android:id="@+id/add_meal_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_meal"
            style="@style/custom_h2"
            android:textAlignment="center"/>
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/spinner_meal"
            android:layout_marginTop="@dimen/margin_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:spinnerMode="dropdown"
            style="@style/SpinnerCustom"
            android:visibility="visible">
        </Spinner>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/send_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MaterialButtonCustom"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="@string/send"
            android:visibility="visible"/>

            <TextView
                android:id="@+id/no_meal_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="100dp"
                android:text="@string/no_meals_assigned"
                android:visibility="gone"
                style="@style/custom_p">
            </TextView>

        <TextView
            android:id="@+id/no_more_meal_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="50dp"
            android:text="@string/no_more_meals_assigned"
            android:visibility="gone"
            style="@style/custom_p">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_meal_success"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meal_successfully_added"
            android:textAlignment="center"
            style="@style/custom_h2"/>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_horizontal"
            android:id="@+id/success_anim"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_home"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MaterialButtonCustom"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:text="@string/back"
        android:visibility="gone"/>
</LinearLayout>