<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:id="@+id/bottom_sheet_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_container"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_string"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        style="@style/custom_h2"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:id="@+id/add_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/margin_horizontal">
        <androidx.cardview.widget.CardView
            style="@style/IconBgCustom">
            <ImageView
                style="@style/IconAddCustom"
                android:src="@drawable/monitor_weight_24dp"/>
        </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:text="@string/add_weight"
        android:layout_marginVertical="15dp"
        style="@style/custom_p" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="7dp">
        <androidx.cardview.widget.CardView
            style="@style/IconBgCustom">
            <ImageView
                style="@style/IconAddCustom"
                android:src="@drawable/training_24"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:text="@string/add_training"
            android:layout_marginVertical="15dp"
            style="@style/custom_p"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="7dp">
        <androidx.cardview.widget.CardView
            style="@style/IconBgCustom">
            <ImageView
                style="@style/IconAddCustom"
                android:src="@drawable/meal_24dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:text="@string/add_meal"
            android:layout_marginVertical="15dp"
            style="@style/custom_p"/>
    </LinearLayout>

</LinearLayout>

</LinearLayout>